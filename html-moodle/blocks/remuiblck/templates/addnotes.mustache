{{^cannotview}}
<div id="add_notes" class="add-notes-container">
  <div class="add-select-wrapper">
    <div class="add-notes-select">
      <label for="select-note-course" class="select-note-course-label">{{#str}}selectacourse,
        block_remuiblck{{/str}}</label>
      <select class="form-control" id="select-note-course">
        <option value="">{{#str}}selectacourse, block_remuiblck{{/str}}</option>
        {{# courses }}
        <option id="{{ id }}">{{ shortname }}</option>
        {{/ courses }}
      </select>
    </div>
    <div class="select-note-student d-none">
      <label for="select-note-student" class="select2-studentlist-label">{{#str}}selectastudent,
        block_remuiblck{{/str}}</label>
      <select class="select2-studentlist form-control" id="select-note-student"></select>
    </div>
  </div>

  <div class="row  add-notes-button-wrapper d-none">
    <div class="add-notes-button">
      <a href="#" class="btn btn-secondary site-note">{{#str}}addsitenote, block_remuiblck{{/str}}</a>
    </div>
    <div class="add-notes-button">
      <a href="#" class="btn btn-secondary course-note">{{#str}}addcoursenote, block_remuiblck{{/str}}</a>
    </div>
    <div class="add-notes-button">
      <a href="#" class="btn btn-secondary personal-note">{{#str}}addpersonalnote, block_remuiblck{{/str}}</a>
    </div>
  </div>
</div>

