<div class="rmblk-card d-flex dashboard-card" role="listitem" data-region="course-content" data-course-id="4">
    <div class="rmblk-image-wrapper">
        <div class="card-img dashboard-card-img  p-p-3 d-flex justify-content-end"
            style='background-image: url("{{{courseimage}}}");'>
            <div class="wdm-course-card-actions">
                {{> block_remuiblck/manage_courses_list_actions }}
            </div>
        </div>
    </div>
    <div class="rmblck-card-body d-flex flex-column h-100 justify-content-between flex-gap-5" title="{{fullname}}">
        <div class="remblk-body-hd d-flex flex-column flex-gap-d5">
            <a href="{{courseviewlink}}{{id}}" class="text-truncate text-wrap ellipsis ellipsis-3 remblk-coursename text-decoration-none h-semibold-6" tabindex="0">
                {{fullname}}
            </a>
            <small class="remblk-course-startdate" title="{{#str}} startdate, block_remuiblck {{/str}} {{#userdate}} {{startdate}}, %A, %d %B %Y
            {{/userdate}}">{{#str}} startdate, block_remuiblck {{/str}} {{#userdate}} {{startdate}}, %A, %d %B %Y
                {{/userdate}}</small>
        </div>
        <div class="remblk-body-ft">
            <a href="{{courseviewlink}}{{id}}" class="btn btn-primary w-100" tabindex="0" title="{{#str}} viewcourse, block_remuiblck {{/str}}">{{#str}} viewcourse, block_remuiblck {{/str}}</a>
        </div>

    </div>
</div>
