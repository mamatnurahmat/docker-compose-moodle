<div id="tasks" class=" container p-0">
    <div class="filters row justify-content-between p-p-6">
        <div class="filter-options d-flex justify-content-start align-items-center p-0" >
            {{> block_remuiblck/task-duration-selector }}
            {{> block_remuiblck/task-status-selector }}
            <div class="input-search  filter-item">
                <div class="input-group-prepend d-flex align-items-center ">
                    <button class="btn p-0 m-0" type="submit"><span class="edw-icon edw-icon-Search d-inline"></span></button>
                    <input data-region="task-search-filter" type="text" class="form-control border-0 h-100 " name="" placeholder="{{#str}} search, core_admin {{/str}}" autocomplete="off" title="{{#str}} search, core_admin {{/str}}">
                </div>
            </div>
        </div>
    </div>
    <a data-region="add-task" class="btn btn-primary btn-sm add-item-toggle d-none" title="{{#str}} addtask, block_remuiblck {{/str}}">
        {{! <i class="icon fa fa-plus text-white" aria-hidden="true"></i> }}
        {{#str}} addtask, block_remuiblck {{/str}}
    </a>
    <ul data-region="task-list" class="task-list list-group list-group-dividered unstyled m-0">
        {{> block_remuiblck/placeholder-task-list-item }}
        {{> block_remuiblck/placeholder-task-list-item }}
        {{> block_remuiblck/placeholder-task-list-item }}
    </ul>
    <div class="block-processing d-none">
        <div class="block-processing-icon"><i class="fa fa-circle-o-notch fa-spin"></i></div>
    </div>
</div>
{{#js}}
require(['block_remuiblck/schedule_task'], function(scheduletask) {
    scheduletask.init('#tasks');
});
{{/js}}
