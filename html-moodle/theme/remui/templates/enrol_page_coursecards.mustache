{{!
    @template theme_remui/enrol_page_coursecards
    remui drawer template.

}}

{{#coursecards}}
<div class="course_card-0 card-wrapper card dashboard-card edwanimate-{{animation}} h-100 d-flex flex-column"  data-course-id="{{id}}">
    <div tabindex="-1">
        <div class="card-img dashboard-card-img p-p-4 edw-course-img-wrapper"
            style='background-image: url("{{{courseimage}}}");'>
        </div>
    </div>
    <div class="card-body course-info-container d-flex flex-column  justify-content-between  flex-gap-5"
        id="course-info-container-{{id}}-{{uniqid}}" title="{{{ coursename }}}">
        <div class="edw-card-design-hd d-flex flex-column flex-gap-d5">
            <div class="d-flex flex-column align-items-start flex-gap-1">
                <span class="categoryname text-truncate small-info-regular" >
                    {{{categoryname}}}
                </span>
                <div class="w-100 ">
                    <a class="coursename text-decoration-none ellipsis ellipsis-2 h-semibold-6"
                        href="{{courseurl}}" title="{{{coursename}}}">{{{coursename}}}</a>
                </div>
            </div>
            {{#instructors}}
            <div class="d-flex flex-row flex-gap-4">
                <div class="d-flex flex-row instructor-info-wrapper align-items-center flex-gap-d5">
                    <a href="{{ url }}" class="d-flex instructor-img {{ imgStyle }}"
                        aria-label="Instructor for {{coursename}} is - {{name}}" data-toggle="tooltip"
                        title="{{{name}}}">
                        <img src="{{ picture }}" class="rounded-circle" alt="{{ name }}" loading="lazy"/>
                    </a>
                    <h6 class="h-semibold-6 course-instructors m-0 break-word ellipsis ellipsis-2" title="{{{name}}}">{{{name}}}</h6>
                </div>
                {{#instructorcount}}<span
                    class="small-info-semibold instructorscount d-flex align-items-center justify-content-center" title="{{#str}}instructorcounttitle,theme_remui{{/str}}">+{{instructorcount}}</span>{{/instructorcount}}
            </div>
            {{/instructors}}

            {{#coursesummary}}
            <p class="coursesummary ellipsis ellipsis-3 para-regular-3 m-0" title="{{{coursesummary}}}">{{{coursesummary}}}</p>
            {{/coursesummary}}
        </div>
        <div class="edw-card-design-ft d-flex flex-column align-self-strech flex-gap-1">
            <div class="d-flex text-nowrap ernr-lesson-wrapper flex-column flex-gap-2">
                {{#ernrshortdesign}}
                <div>{{{ernrshortdesign}}}</div>
                {{/ernrshortdesign}}
                <div class="d-flex justify-content-between">
                    <div class="lesson-count small-info-semibold m-0 d-flex flex-gap-1 align-items-center"> <span
                            class="edw-icon edw-icon-Book" title="{{lessoncount}} lessons"></span title="{{lessoncount}} lessons"> {{lessoncount}} lessons</div>
                    {{! <div class=" ft-lock-icon">
                        <span class="edw-icon edw-icon-Logout"></span>
                    </div> }}
                    <div class="d-flex flex-gap-d5 align-items-center enrollmenticons-wrapper">
                        {{#enrollmenticons }}{{{enrollmenticons}}}{{/enrollmenticons }}
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between flex-gap-4">
                <a class="btn btn-primary w-100 view-course-btn" href="{{ courseurl }} " title="{{#str}}viewcourse,theme_remui{{/str}}">{{#str}}viewcourse,theme_remui{{/str}}</a>
            </div>
        </div>
    </div>
</div>

{{/coursecards}}
