{{!
    @template theme_remui/enrol_courseinstructorsmenu
}}

<div class="instructors d-flex flex-column flex-gap-6">
    {{#instructors}}
        <div class="instructor d-flex flex-gap-6" data-id="{{id}}">
            <div class="instructor-profile">
                {{{avatar}}}
            </div>
            <div class="instructor-details d-flex flex-column flex-gap-2">
                <h5 class="h-semibold-5 m-0"><a href="{{profileurl}}" class="text-decoration-none edw-heading-color instructor-name-url">{{fullname}}</a></h5>
                <div class="instructor-stats d-flex flex-gap-6">
                    <div class="stat-container">
                        <span class="edw-icon edw-icon-Group-user large"></span>
                        <span class="stat">
                            <b class="count">{{totalstudents}}</b>
                            {{#str}}students, theme_remui{{/str}}
                        </span>
                    </div>
                    <div class="stat-container">
                        <span class="edw-icon edw-icon-Book large"></span>
                        <span class="stat">
                            <b class="count">{{totalcourses}}</b>
                            {{#str}}courses, theme_remui{{/str}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    {{/instructors}}
</div>
