{{!
    @template theme_remui/enrol_pricingsection
}}

<div class="section pricing-section">
    <div class="top">
        <div class="pricing">
            <span class="pricing--label">{{#str}}price, theme_remui{{/str}}</span>
            <div>
                <span class="pricing--price h-bold-2">{{courseprice}}</span>
                <span class="pricing--currency h-semibold-5">{{currency}}</span>
            </div>
        </div>
        <div class="stat-container">
            <span class="edw-icon edw-icon-Group-user large"></span>
            <span class="stat">
                <b class="count">{{enrolledstudents}}</b>
                {{#str}}studentsenrolled, theme_remui{{/str}}
            </span>
        </div>
        <div class="enroll-btn-wrapper">
            <a class="btn btn-primary btn-block" href="#maincontent">{{buttontext}}</a>
        </div>
    </div>
    <div class="bottom">
        <div class="list-item-group">
            {{#courselength}}
            <div class="list-item d-flex justify-content-between">
                <span class="d-flex flex-gap-1">
                    <span class="edw-icon edw-icon-Length-01 large"></span>
                    <span class="label h-semibold-6">{{#str}}length, theme_remui{{/str}}</span>
                </span>
                <span class="sub-label h-semibold-6 text-right">{{courselength}}</span>
            </div>
            {{/courselength}}

            {{#totallessons}}
            <div class="list-item d-flex justify-content-between">
                <span class="d-flex flex-gap-1">
                    <span class="edw-icon edw-icon-Lecture-01 large"></span>
                    <span class="label h-semibold-6">{{#str}}lecture, theme_remui{{/str}}</span>
                </span>
                <span class="sub-label h-semibold-6 text-right">{{totallessons}}</span>
            </div>
            {{/totallessons}}

            {{#startdate}}
            <div class="list-item d-flex justify-content-between">
                <span class="d-flex flex-gap-1">
                    <span class="edw-icon edw-icon-Calendar large"></span>
                    <span class="label h-semibold-6">{{#str}}startdate, theme_remui{{/str}}</span>
                </span>
                <span class="sub-label h-semibold-6 text-right">{{startdate}}</span>
            </div>
            {{/startdate}}

            {{#skilllevel}}
            <div class="list-item d-flex justify-content-between">
                <span class="d-flex flex-gap-1">
                    <span class="edw-icon edw-icon-Skill-level-01 large"></span>
                    <span class="label h-semibold-6">{{#str}}skilllevel, theme_remui{{/str}}</span>
                </span>
                <span class="sub-label h-semibold-6 text-right">{{skilllevel}}</span>
            </div>
            {{/skilllevel}}

            {{#language}}
            <div class="list-item d-flex justify-content-between">
                <span class="d-flex flex-gap-1">
                    <span class="edw-icon edw-icon-Language large"></span>
                    <span class="label h-semibold-6">{{#str}}language, theme_remui{{/str}}</span>
                </span>
                <span class="sub-label h-semibold-6 text-right">{{language}}</span>
            </div>
            {{/language}}
            {{#certificates}}
            <div class="list-item d-flex justify-content-between">
                <span class="d-flex flex-gap-1">
                    <span class="edw-icon edw-icon-Certificate large"></span>
                    <span class="label h-semibold-6">{{#str}}certificate, theme_remui{{/str}}</span>
                </span>
                <span class="sub-label h-semibold-6 text-right">Yes</span>
            </div>
            {{/certificates}}
        </div>
    </div>
</div>
